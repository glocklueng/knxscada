<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/group_address_label"
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="0.5"
    	android:textIsSelectable="false"
    	android:textStyle="italic|bold"
    	android:gravity="center_vertical"
   		android:visibility="gone"  
    />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:padding="5dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/group_address_main_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="3" />

        <TextView
            android:id="@+id/group_address_separator_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.125"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/group_address_separator" />

        <EditText
            android:id="@+id/group_address_sub_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="3" />

        <TextView
            android:id="@+id/group_address_separator_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.125"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/group_address_separator" />

        <EditText
            android:id="@+id/group_address_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="3" />
    </LinearLayout>

</LinearLayout>